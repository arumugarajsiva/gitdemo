<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="arum.controller.Main" xmlns:t="sap.ui.table" xmlns:f="sap.ui.layout.form"
	xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core">
	<Page id="page1" title="Welcome to UI5">
		<Button id="but1" text="Press Me" press="onClick">
		</Button>
		
		<f:SimpleForm id="SimpleFormChange354"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Address"
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" >
			<f:content>
				<Label text="Company Name" />
				<Input id="name" value="{/postPayload/companyName}" />
				<Label text="Contact Name" />
				<Input value="{/postPayload/contactName}"/>
				<Label text="Status" />
				<Input value="{/postPayload/status}"/>
			</f:content>
		</f:SimpleForm>
		
		<t:Table id="idTable" selectionMode="Single">
			<t:columns>
			
				<t:Column>
					<t:label>
						<Text text="Company Name">
						</Text>
					</t:label>
					<t:template>
						<Text text="{companyName}">
						</Text>
					</t:template>
				</t:Column>

				<t:Column>
					<t:label>
						<Text text="Contact Name">
						</Text>
					</t:label>
					<t:template>
						<Text text="{contactName}">
						</Text>
					</t:template>
				</t:Column>
				
				<t:Column>
					<t:label>
						<Text text="Status">
						</Text>
					</t:label>
					<t:template>
						<Text text="{status}">
						</Text>
					</t:template>
				</t:Column>				
			</t:columns>
		</t:Table>
		<footer>
			<Toolbar>
				<Button text="Save" press="onSave"></Button>
				<Button text="Delete" press="onDelete"></Button>
			</Toolbar>
		</footer>	
	</Page>
</mvc:View>